---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Aspiring FinTech Engineer | .NET, Python & Blockchain Developer" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    
    <meta property="og:title" content="Tajbir Ahmed Santo" />
    <meta property="og:description" content="CSE Undergraduate & Aspiring AI Engineer." />
    <meta property="og:image" content="https://github.com/tajbirsanto.png" />
    <meta property="og:url" content="https://tajbirsanto.github.io" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Tajbir Santo Portfolio" />

    <title>{title}</title>
  </head>
  <body class="bg-[--background] sm:px-28 lg:px-20 px-9">
    <slot />
  </body>
</html>

<style is:global>
  @import url('https://fonts.cdnfonts.com/css/montserrat');

  :root {
    --background: #101010;
    /* I kept the purple, but for FinTech, a deep blue (e.g., #007bff) also works well */
    --sec: #a476ff; 
    --white: #dfdfdf;
    --white-icon: #f3f3f398;
    --white-icon-tr: #f3f3f310;
  }

  * {
    font-family:
      "Montserrat",
      -apple-system,
      system-ui,
      sans-serif;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }

  *::selection {
    background-color: var(--sec);
    color: var(--background);
  }

  /* Scrollbar styles */

  ::-webkit-scrollbar {
    width: 15px;
  }

  ::-webkit-scrollbar-track {
    background: var(--background); /* Fixed variable name from 'container' to 'background' to match root */
    border-radius: 30px;
  }

  ::-webkit-scrollbar-thumb {
    background: #333; /* Made thumb slightly lighter than background for visibility */
    border-radius: 10px;
    border: 3px solid var(--background); /* Adds a nice padding effect */
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--sec);
  }

  /* Scrollbar styles for Firefox */
  * {
    scrollbar-width: thin;
    scrollbar-color: var(--sec) var(--background);
  }
</style>
